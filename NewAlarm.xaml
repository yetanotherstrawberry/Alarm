<Window x:Class="Alarm.NewAlarm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resx="clr-namespace:Alarm.Properties"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        mc:Ignorable="d"
        Title="{x:Static resx:Resources.INTERACTION_NEWALARM_TITLE}"
        KeyDown="KeyAction"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Height="140" Width="300" Padding="10">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock TextAlignment="Center" Margin="5" Text="{x:Static resx:Resources.INTERACTION_NEWALARM_CONTENT}"/>
            <TextBox Margin="5" x:Name="Text" />
            <Button HorizontalAlignment="Center" Margin="5" Padding="2" FontSize="12" Click="CloseButton" Content="{x:Static resx:Resources.INTERACTION_NEWALARM_BUTTON_OK}"/>
        </StackPanel>
    </Grid>
</Window>
